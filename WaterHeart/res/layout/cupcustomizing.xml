<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|bottom">
    <ImageView 
        android:src="@drawable/cupcustomizing_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="11"
        android:layout_gravity="center">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/cupcustomizing_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"></LinearLayout>
	</LinearLayout>
	
	
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:weightSum="16">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="2"></LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="1"
	        android:gravity="center">
	        <ImageView 
	            android:src="@drawable/cupcustomizing_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="3">
	        <EditText
	            android:id="@+id/cupcustomizing_amountEdit"
	            android:background="@drawable/cupcustomizing_value_box"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:inputType="number"
	            android:gravity="center"/>
	        <ImageView 
	            android:src="@drawable/cupcustomizing_ml"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <SeekBar 
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:max="1000"
	            android:id="@+id/cupcustomizing_seekbar"
	             /> <!--  일단 컵 하나당 용량 최대치는 1000으로정해둠! -->
	           
	    </RelativeLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="1"></LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="2"
	        android:gravity="center">
	        <ImageView 
	            android:src="@drawable/cupcustomizing_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="2"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <ImageView 
	            android:src="@drawable/cup_drop_customizing"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/cup_drop_customizing"
	            android:alpha="0.1"
	            android:clickable="true"/>
	        <ImageView
	            android:src="@drawable/cup_bottle_customizing"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/cup_bottle_customizing"
	            android:alpha="0.1"
	            android:clickable="true"/>
	        <ImageView
	            android:src="@drawable/cup_cup_customizing"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/cup_cup_customizing"
	            android:alpha="0.1"
	            android:clickable="true"/>
	        <ImageView
	            android:src="@drawable/cup_coffee_customizing"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/cup_coffee_customizing"
	            android:alpha="0.1"
	            android:clickable="true"/>
	    </LinearLayout>
	</LinearLayout>
</FrameLayout>